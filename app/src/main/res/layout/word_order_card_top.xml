<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_request_user_and_call_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="报修电话:  9300（分）马老师" />

    <TextView
        android:id="@+id/tv_request_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下单时间:  2015-09-06 10:00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="维修地点:  急3F(三床)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="维修类型:  给排水" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="维修内容:  马桶（堵）" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否时限:  否" />

</LinearLayout>