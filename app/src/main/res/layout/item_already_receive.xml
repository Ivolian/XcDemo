<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <include layout="@layout/word_order_card_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.unicorn.csp.xcdemo.PaperButton
                android:id="@+id/btn_pack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:paper_color="@color/white"
                app:paper_text="领料"
                app:paper_text_color="@color/black"
                app:paper_text_size="15dp" />

            <com.unicorn.csp.xcdemo.PaperButton
                android:id="@+id/btn_arrival"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:paper_color="@color/colorPrimary"
                app:paper_text="到达"
                app:paper_text_color="@color/white"
                app:paper_text_size="15dp" />

        </LinearLayout>

    </LinearLayout>

    <com.wangqiang.libs.labelviewlib.LabelView
        android:id="@+id/labelview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:text="限"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:label_distance="8dp"
        app:label_position="TOP_RIGHT" />

</android.support.v7.widget.CardView>